datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ConversationState {
  INIT
  ASK_NAME
  TECH_QUALIFICATION
  READY_FOR_MATCH
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum QuoteStatus {
  DRAFT
  SENT
  WON
  LOST
}

model Company {
  id                String   @id @default(cuid())
  name              String   @unique
  paintDepositMxn   Int      @default(7500)
  paintSurchargePct Int      @default(15)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  leads         Lead[]
  conversations Conversation[]
  messages      Message[]
  qualifications Qualification[]
  quotes Quote[]

}

model Lead {
  id        String   @id @default(cuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  phoneE164 String
  name      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  conversations Conversation[]

  email           String?
  emailCapturedAt DateTime?
  @@unique([companyId, phoneE164])
  qualification Qualification?
  quotes Quote[]

}

model Conversation {
  id            String            @id @default(cuid())
  companyId     String
  company       Company           @relation(fields: [companyId], references: [id])

  leadId        String
  lead          Lead              @relation(fields: [leadId], references: [id])

  state         ConversationState @default(INIT)
  lastMessageAt DateTime          @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  messages      Message[]
}

model Message {
  id             String           @id @default(cuid())
  companyId      String
  company        Company          @relation(fields: [companyId], references: [id])

  conversationId String
  conversation   Conversation     @relation(fields: [conversationId], references: [id])

  direction      MessageDirection
  waMessageId    String?
  body           String
  rawPayload     Json?
  createdAt      DateTime @default(now())

  @@index([companyId, conversationId, createdAt])
}

model Qualification {
  id          String   @id @default(cuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])

  leadId      String   @unique
  lead        Lead     @relation(fields: [leadId], references: [id])

  heightMeters Float?
  heightFeet   Int?
  liftType     String?  // "BRAZO" | "TIJERA"
  activity     String?  // "PINTURA" | "GENERAL"
  terrain      String?  // "PISO_FIRME" | "TERRACERIA"
  city         String?
  durationDays Int?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Quote {
  id          String     @id @default(cuid())
  companyId   String
  company     Company    @relation(fields: [companyId], references: [id])

  leadId      String
  lead        Lead       @relation(fields: [leadId], references: [id])

  status      QuoteStatus @default(DRAFT)
  quoteNumber String

  // Snapshot comercial
  transportZone        String?
  transportRoundTripMx Int      @default(0)

  // Totales del escenario principal (duraci√≥n solicitada)
  subtotalMx Int @default(0)
  vatMx      Int @default(0)
  totalMx    Int @default(0)

  meta Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items QuoteItem[]

  @@index([companyId, createdAt])
  @@unique([companyId, quoteNumber])
}

model QuoteItem {
  id        String  @id @default(cuid())
  quoteId   String
  quote     Quote   @relation(fields: [quoteId], references: [id])

  lineNo     Int
  description String
  durationDays Int
  unitPriceMx  Int
  amountMx     Int

  createdAt DateTime @default(now())

  @@index([quoteId, lineNo])
}


